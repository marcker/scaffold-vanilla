# http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
indent_size = 4

[*.php]
indent_size = 4

[*.coffee]
indent_size = 2

[*.js]
indent_size = 4

[*.styl]
indent_size = 4

[*.css]
indent_size = 4
